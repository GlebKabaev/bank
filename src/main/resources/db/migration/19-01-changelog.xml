<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.32.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1763551632401-1" author="glebk">
        <createTable tableName="cards">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cards"/>
            </column>
            <column name="number" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="owner" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_month" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_year" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid"/>
        </createTable>
    </changeSet>
    <changeSet id="1763551632401-2" author="glebk">
        <createTable tableName="tickets">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tickets"/>
            </column>
            <column name="user_id" type="uuid"/>
            <column name="card_id" type="uuid"/>
        </createTable>
    </changeSet>
    <changeSet id="1763551632401-3" author="glebk">
        <createTable tableName="users">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1763551632401-4" author="glebk">
        <addUniqueConstraint columnNames="number" constraintName="uc_cards_number" tableName="cards"/>
    </changeSet>
    <changeSet id="1763551632401-5" author="glebk">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="1763551632401-6" author="glebk">
        <addUniqueConstraint columnNames="username" constraintName="uc_users_username" tableName="users"/>
    </changeSet>
    <changeSet id="1763551632401-7" author="glebk">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="cards" constraintName="FK_CARDS_ON_USER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="1763551632401-8" author="glebk">
        <addForeignKeyConstraint baseColumnNames="card_id" baseTableName="tickets" constraintName="FK_TICKETS_ON_CARD"
                                 referencedColumnNames="id" referencedTableName="cards"/>
    </changeSet>
    <changeSet id="1763551632401-9" author="glebk">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="tickets" constraintName="FK_TICKETS_ON_USER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>